<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".recordforms.PatientNextOfFragment">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/image"
        android:layout_width="390dp"
        android:layout_height="284dp"
        android:maxHeight="300dp"
        android:minHeight="450dp"
        android:src="@drawable/ic_next_king"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </ImageView>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/next_of_king_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/nofK_mobile_layout"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/nextOfKingName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Next of King Full Name"
            android:inputType="textCapWords"
            android:textAlignment="center"/>

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/nofK_mobile_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minWidth="100dp"
        app:layout_constraintTop_toBottomOf="@id/next_of_king_name"
        app:layout_constraintStart_toStartOf="@id/next_of_king_name"
        app:layout_constraintEnd_toEndOf="@id/nofK_relationship_layout"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/nextOfKingMobile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Mobile"
            android:inputType="phone"
            android:textAlignment="center"/>

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/nofK_relationship_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minWidth="100dp"
        app:layout_constraintTop_toBottomOf="@id/nofK_mobile_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/nextOfKingRelationship"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Relationship With Patient"
            android:inputType="textCapWords"
            android:textAlignment="center"/>

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/registerNextOfKing"
        style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nofK_relationship_layout"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:text="Register"
        app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>