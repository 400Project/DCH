<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/light_orange"
    android:layout_margin="@dimen/services_margins"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.ServicesFragment">
    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\t Dangme Community Hospital \n We care for your health being.\n The forllowing are the services that we render"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/dp"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Department"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/welcome"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/opd"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. General Out Patient"
        app:layout_constraintTop_toBottomOf="@id/dp"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/ipd"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. In-Patient Patient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dp"
        />

    <TextView
        android:id="@+id/services"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Services"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/opd"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/one"
        style="@style/Widget.MaterialComponents.Service.Text"
        android:text="1. Obstetrics and Gynaecology"
        app:layout_constraintTop_toBottomOf="@id/services"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/two"
        style="@style/Widget.MaterialComponents.Service.Text"

        android:text="2. Pharmacy"
        app:layout_constraintTop_toBottomOf="@id/one"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/three"
        style="@style/Widget.MaterialComponents.Service.Text"

        android:text="3. Laboratory"
        app:layout_constraintTop_toBottomOf="@id/two"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/four"
        style="@style/Widget.MaterialComponents.Service.Text"

        android:text="4. Surgical"
        app:layout_constraintTop_toBottomOf="@id/three"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/five"
        style="@style/Widget.MaterialComponents.Service.Text"
        android:text="5. Eye"
        app:layout_constraintTop_toBottomOf="@id/four"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/six"
        style="@style/Widget.MaterialComponents.Service.Text"

        android:text="6. Public Health"
        app:layout_constraintTop_toBottomOf="@id/five"
        app:layout_constraintStart_toStartOf="parent"/>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/six">

    <TextView
        android:id="@+id/working_hours"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Working Hours"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/><TextView
        android:id="@+id/contact_Text"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact: "
        app:layout_constraintTop_toBottomOf="@id/working_hours"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/hours"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Every day - 24 hours"
    app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        /> <TextView
        android:id="@+id/contact"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" +233249728476"
    app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hours"
        />
</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</FrameLayout>