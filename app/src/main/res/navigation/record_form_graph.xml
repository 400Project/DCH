<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/record_form_graph"
    app:startDestination="@id/bioDataFragment">

    <fragment
        android:id="@+id/dignosesFragment"
        android:name="com.oyatech.dch.patient.recordforms.DignosesFragment"
        android:label="Diagnoses"
        tools:layout="@layout/fragment_dignoses" >
        <action
            android:id="@+id/action_dignosesFragment_to_prescriptionFragment"
            app:destination="@id/prescriptionFragment" />
        <action
            android:id="@+id/action_dignosesFragment_to_vitalsFragment"
            app:destination="@id/vitalsFragment" />
    </fragment>
    <fragment
        android:id="@+id/prescriptionFragment"
        android:name="com.oyatech.dch.patient.recordforms.PrescriptionFragment"
        android:label="Prescriptions"
        tools:layout="@layout/fragment_prescription" >
        <action
            android:id="@+id/action_prescriptionFragment_to_dignosesFragment"
            app:destination="@id/dignosesFragment" />
    </fragment>
    <fragment
        android:id="@+id/vitalsFragment"
        android:name="com.oyatech.dch.patient.recordforms.BlankFragment"
        android:label="Patient Vitals"
        tools:layout="@layout/fragment_vitals" >
        <action
            android:id="@+id/action_vitalsFragment_to_dignosesFragment"
            app:destination="@id/dignosesFragment" />
    </fragment>
    <fragment
        android:id="@+id/bioDataFragment"
        android:name="com.oyatech.dch.patient.recordforms.BioDataFragment"
        android:label="Patient's Bio Data"
        tools:layout="@layout/fragment_bio_data" >
        <action
            android:id="@+id/action_bioDataFragment_to_vitalsFragment"
            app:destination="@id/vitalsFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailRecordFragment"
        android:name="com.oyatech.dch.patient.recordforms.DetailRecordFragment"
        android:label="Details Records"
        tools:layout="@layout/fragment_detail_record" />
</navigation>